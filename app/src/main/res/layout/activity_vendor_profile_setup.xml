<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:scrollbars="vertical">

    <!-- Title Input -->
    <TextView
        android:id="@+id/label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title of Your Work:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Title"
        />

    <!-- Service For Input (Horizontal Checkboxes) -->
    <TextView
        android:id="@+id/label_servicesFor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services For:"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <CheckBox
            android:id="@+id/checkBox_servicesFor_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/checkBox_servicesFor_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/checkBox_servicesFor_both"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Both"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Staff Input (Horizontal Checkboxes) -->
    <TextView
        android:id="@+id/label_staff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Staff:"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <CheckBox
            android:id="@+id/checkBox_staff_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/checkBox_staff_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/checkBox_staff_both"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Both"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Expertise Input -->
    <TextView
        android:id="@+id/label_expertise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expertise (comma separated):"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText_expertise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Expertise"
        />

    <!-- Cities Input -->
    <TextView
        android:id="@+id/label_cities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cities:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText_cities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Cities" />

    <!-- Location Type Input -->
    <TextView
        android:id="@+id/label_locationType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Type:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText_locationType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Location Type" />

    <!-- Home Service Checkbox (Horizontal) -->
    <TextView
        android:id="@+id/label_homeService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Service:"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <CheckBox
            android:id="@+id/checkBox_homeService_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/checkBox_homeService_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/checkBox_homeService_both"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Both"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Cancellation Policy Checkbox (Horizontal) -->
    <TextView
        android:id="@+id/label_cancellationPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancellation Policy:"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <CheckBox
            android:id="@+id/checkBox_cancellationPolicy_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/checkBox_cancellationPolicy_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Description Input -->
    <TextView
        android:id="@+id/label_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Description"
        android:inputType="textMultiLine"/>

    <!-- Image Upload Section -->
    <TextView
        android:id="@+id/label_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Images of Your Work:"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_uploadImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Images"
        android:onClick="openImagePicker"/>

    <GridView
        android:id="@+id/imageGridView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:columnWidth="100dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:numColumns="4"/>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="submitDetails"/>

</LinearLayout>
